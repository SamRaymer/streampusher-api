<%= simple_form_for @podcast, html: {class: 'form-horizontal'} do |f| %>
  <%= f.input :radio_id, input_html: { value: @current_radio.id }, as: :hidden %>
  <%= f.input :playlist_id, collection: @current_radio.playlists, label_method: :name, value_method: :id  %>
  <%= f.input :name %>
  <%= f.input :image, as: :file %>
  <%= f.input :description %>
  <%= f.input :link %>

  iTunes tags
  <%= f.input :itunes_summary %>
  <%= f.input :itunes_name %>
  <%= f.input :itunes_email %>

  <%= f.submit 'Save Podcast', class: 'btn btn-success' %>
<% end %>
