<%= simple_form_for @show, html: {class: 'form-horizontal'} do |f| %>
  <%= f.input :radio_id, value: @show.radio_id, as: :hidden %>
  <%= f.input :dj_id, collection: @current_radio.djs, label_method: :username, value_method: :id  %>
  <%= f.input :playlist_id, collection: @current_radio.playlists, label_method: :name, value_method: :id  %>
  <%= f.input :title %>

  <%= f.submit 'Add show', class: 'btn btn-success' %>
<% end %>

<table class="table table-striped">
  <thead>
    <th>title</th>
    <th>host DJ</th>
  </thead>
  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= show.title %></td>
        <td><%= show.dj.try(:username) %></td>
        <td><%= show.playlist.try(:name) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
