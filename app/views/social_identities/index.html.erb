<% User.omniauth_providers.each do |provider| %>
  <% if current_user.connected_identity? provider %>
    <%= "Connected #{provider.to_s.titleize} account." %>
  <% else %>
    <% case provider.to_s %>
    <% when "mixcloud" %>
      <%= link_to "Connect your #{provider.to_s.titleize} account to Streampusher", user_mixcloud_omniauth_authorize_path %><br />
    <% end %>
    <% when "soundcloud" %>
      <%= link_to "Connect your #{provider.to_s.titleize} account to Streampusher", user_soundcloud_omniauth_authorize_path %><br />
    <% end %>
  <% end %>
  <br />
<% end %>
