<h2>New Scheduled Show</h1>
<%= simple_form_for @scheduled_shows.new, html: {class: 'form-horizontal'} do |f| %>
  <%= f.input :radio_id, value: @current_radio.id, as: :hidden %>
  <%= f.input :show_id, collection: @shows, prompt: "Select a show..." %>
  <%= f.input :start_at %>
  <%= f.input :end_at %>

  <%= f.submit 'Add show', class: 'btn btn-success' %>
<% end %>
<div id="calendar">
</div>
