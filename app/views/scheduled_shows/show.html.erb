<div class="row">
  <h1><%= @scheduled_show.title %></h1>
  <% if @scheduled_show.is_guest? %>
    <h3>Guest: <%= @scheduled_show.guest %></h3>
  <% elsif @scheduled_show.dj.present? %>
    <h3><%= "Host: #{@scheduled_show.dj.username}" %></h3>
  <% end %>
  <% if @scheduled_show.image.present? %>
    <div class="show-image">
    <%= image_tag @scheduled_show.image.url(:thumb) %>
    </div>
    <%= link_to "Original Size", @scheduled_show.image.url(:original), :target => "_blank"  %>
  <% end %>
  <p><%= "#{@scheduled_show.start} - #{@scheduled_show.end}" %></p>
  <% if @scheduled_show.recurring? || @scheduled_show.recurrence? %>
    <p>Repeats <b><%= @scheduled_show.human_readable_recurring %></b> <p>
  <% end %>
  <p><%= html_pipeline(@scheduled_show.description) %></p>
  <div class="social">
    <%= timezones_text @scheduled_show %>
  </div>
  <div class="actions">
    <%= link_to "Edit", edit_scheduled_show_path(@scheduled_show) %>
  </div>
</div>
