<div class="main-dashboard">
  <div class="row">
    <% if @radio.playlists.empty? %>
      <p class="bg-warning">
        You haven't added any playlists yet! You won't hear anything on your radio without any playlists. Add a playlist <%= link_to "here", playlists_path %>.
      </p>
    <% end %>
    <div class="col-md-6">
      <h3>Next</h3>
      <h3>Stream Title</h3>
      <input type="text">
      <button type="submit" class="btn btn-success">Update</button>
    </div>
    <div class="col-md-6">
      <h3>Upcoming Show</h3>
      <% show = @radio.next_scheduled_show %>
      <% if show %>
        <%= show.title %>
        <br/>
        <%= "#{show.start} - #{show.end}" %>
        <p><%= show.description %></p>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <h3>Listeners</h3>
      <span id='odometer'>0</span>
      <br/>
      <span>Peak:</span>
    </div>
    <div class="col-md-8">
      <div id="chart">
        <canvas id="listensChart" width="600" height="400"></canvas>
      </div>
    </div>
  </div>
</div>
