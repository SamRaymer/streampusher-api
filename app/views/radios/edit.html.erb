<h2>Radio Settings</h2>
<%= simple_form_for @radio, html: {class: 'form-horizontal'} do |f| %>
  <%= f.input :default_playlist_id, collection: @current_radio.playlists, label_method: :name, value_method: :id  %>
  <h3>TuneIn Integration</h3>
  Send metadata updates to your tunein stream.
  <%= f.input :tunein_metadata_updates_enabled, as: :boolean, label: "Send metadata updates to TuneIn" %>
  <%= f.input :tunein_partner_id %>
  <%= f.input :tunein_partner_key %>
  <%= f.input :tunein_station_id %>

  <%= f.submit 'Save Settings', class: 'btn btn-success' %>
<% end %>

