<h1><%="#{@subscription.user.email}'s radios"%></h1>
<table class="table table-striped">
  <thead>
    <th>radio id</th>
    <th>name</th>
    <th>icecast container id</th>
    <th>liquidsoap container id</th>
  </thead>
  <tbody>
    <% @radios.each do |radio| %>
      <tr>
        <td><%= radio.id %></td>
        <td><%= radio.name %></td>
        <td><%= truncate radio.icecast_container_id %></td>
        <td><%= truncate radio.liquidsoap_container_id %></td>
        <td><%= link_to 'icecast panel', radio.icecast_panel_url, target: '_blank' %></td>
        <td><%= link_to 'restart radio', admin_restart_radio_path(radio), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

