<h1><%="#{@subscription.user.email}'s radios"%></h1>
<table class="table table-striped">
  <thead>
    <th>radio id</th>
    <th>name</th>
    <th>liquidsoap container id</th>
    <th>disk usage</th>
  </thead>
  <tbody>
    <% @radios.each do |radio| %>
      <tr>
        <td><%= radio.id %></td>
        <td><%= radio.name %></td>
        <td><%= truncate radio.liquidsoap_container_id %></td>
        <td><%= number_to_human_size(radio.disk_usage) %></td>
        <td><%= link_to 'restart radio', admin_restart_radio_path(radio),
          method: :post, data: { confirm: "Are you sure?" }  %></td>
        <td><%= link_to 'disable radio', admin_disable_radio_path(radio), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

