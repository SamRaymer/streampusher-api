<li class='track'>
  {{track.displayName}}
  {{#link-to track.audio_file_name class="download"}}
    <i class="fa fa-download"></i>
  {{/link-to}}
  <button {{action 'editTrack'}}class="btn btn-primary"> <i class="fa fa-pencil"></i></button>
  <button {{action 'addToPlaylist'}}class="btn btn-success"> <i class="fa fa-plus-circle"></i></button>
  {{#if isEditing}}
    <br/>
    {{input value=track.artist}}
    {{input value=track.title}}
    {{input value=track.album}}
    <button {{action 'save'}} class="btn btn-primary">Save</button>
    <button {{action 'cancel'}} class="btn btn-primary">Cancel</button>
  {{/if}}
</li>
